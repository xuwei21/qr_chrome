{
  "manifest_version": 3,
  "name": "二维码生成器（侧边栏版）",
  "version": "1.0.0",
  "description": "在 Chrome 侧边栏里快速生成和管理二维码",
  "action": {
    "default_title": "打开二维码侧边栏"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "storage"
  ]
}